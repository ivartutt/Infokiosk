                    </StackPanel>
                </PivotItem.Header>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon HorizontalAlignment="Center"
                                  Glyph="&#xE780F;"
                                  FontSize="16"></FontIcon>
                        <TextBlock Text="Õpilane"></TextBlock>
